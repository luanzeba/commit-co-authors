{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "commit-co-authors",
  "title": "Commit co-authors",
  "description": "Easily add co-authors to your commit when pair programming",
  "icon": "command-icon.png",
  "author": "luanzeba",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Select coauthors",
      "description": "Copy coauthor text for commit message",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.33.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
